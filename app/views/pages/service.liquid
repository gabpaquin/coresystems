          {% endeditable_long_text %}  
        </div>
        <div class="span-8 last">
            <img src="{{ 'Marco_Schweighauser_small.jpg' | theme_image_url }}" style="max-width: 280px; margin-top:8em">
        </div>

        <div class="sidemap_line span-24 last">
        </div>                
